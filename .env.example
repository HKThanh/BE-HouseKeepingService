# Firebase Phone Auth
# Đăng ký tại: https://console.firebase.google.com
# Bật Phone Authentication trong Authentication > Sign-in method
FIREBASE_ENABLED=true
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_API_KEY=your_firebase_web_api_key
# Chọn 1 trong 3 cách cấu hình service account:
# Cách 1: Base64 encoded JSON (khuyến nghị cho Docker/Cloud)
FIREBASE_SERVICE_ACCOUNT_BASE64=
# Cách 2: Đường dẫn file JSON
FIREBASE_SERVICE_ACCOUNT_PATH=
# Cách 3: JSON string trực tiếp
FIREBASE_SERVICE_ACCOUNT_JSON=
# Phone OTP Settings
FIREBASE_PHONE_OTP_LENGTH=6
FIREBASE_PHONE_SESSION_TTL=120
# Fallback: Khi Firebase lỗi, log OTP ra console để test (true/false)
FIREBASE_PHONE_FALLBACK_TO_LOG=true

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRATION_MINUTES=5
OTP_MAX_ATTEMPTS=5
OTP_RESEND_COOLDOWN_SECONDS=60

